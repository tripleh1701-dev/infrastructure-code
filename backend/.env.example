# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# DynamoDB
DYNAMODB_TABLE_PREFIX=myapp_

# AWS Cognito Authentication
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# Application
PORT=3001
NODE_ENV=development
PROJECT_NAME=license-portal

# CORS - Add your frontend URLs
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# AWS Secrets Manager Configuration
# =============================================================================

# Enable Secrets Manager integration (set to true in production)
USE_SECRETS_MANAGER=false

# Cache TTL for secrets (in milliseconds, default: 5 minutes)
SECRETS_CACHE_TTL_MS=300000

# Secret ARNs (set these when USE_SECRETS_MANAGER=true)
# DATABASE_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:license-portal-prod/database/credentials-xxxxxx
# JWT_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:license-portal-prod/auth/jwt-keys-xxxxxx
# API_KEYS_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:license-portal-prod/api/keys-xxxxxx
# COGNITO_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:license-portal-prod/cognito/config-xxxxxx

# =============================================================================
# Fallback Configuration (used when Secrets Manager is disabled)
# =============================================================================

# JWT Configuration (fallback when not using Secrets Manager)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7
JWT_ALGORITHM=HS256

# Database Configuration (fallback when not using Secrets Manager)
# DATABASE_ENGINE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=myapp
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=password

# API Keys (fallback when not using Secrets Manager)
# API_KEY_STRIPE=sk_test_xxxx
# API_KEY_SENDGRID=SG.xxxx

# =============================================================================
# EventBridge Configuration (Account Provisioning Events)
# =============================================================================

# Enable provisioning event notifications (set to true in production)
ENABLE_PROVISIONING_EVENTS=true

# EventBridge event bus name (auto-configured by Terraform)
# EVENTBRIDGE_BUS_NAME=license-portal-prod-account-provisioning

# SNS Topic ARNs for direct notifications (set by Terraform outputs)
# SNS_PROVISIONING_SUCCESS_ARN=arn:aws:sns:us-east-1:123456789:license-portal-prod-provisioning-success
# SNS_PROVISIONING_FAILURE_ARN=arn:aws:sns:us-east-1:123456789:license-portal-prod-provisioning-failure
# SNS_PROVISIONING_ALL_ARN=arn:aws:sns:us-east-1:123456789:license-portal-prod-provisioning-all

# =============================================================================
# CloudFormation Configuration (Account Provisioning)
# =============================================================================

# S3 bucket for CloudFormation templates (set by Terraform)
# CFN_TEMPLATE_BUCKET=license-portal-prod-cfn-templates

# =============================================================================
# CloudWatch Custom Metrics
# =============================================================================

# Enable custom application metrics emission (default: true in production)
CLOUDWATCH_METRICS_ENABLED=true

# Custom namespace for application metrics (auto-configured from PROJECT_NAME)
# CLOUDWATCH_METRICS_NAMESPACE=license-portal/Application

# =============================================================================
# Cognito Reconciliation Cron Job
# =============================================================================

# Enable the daily cron job that provisions DynamoDB users missing in Cognito
COGNITO_RECONCILIATION_ENABLED=false

# Set to true to preview which users would be reconciled without making changes
COGNITO_RECONCILIATION_DRY_RUN=false

# =============================================================================
# Credential Email Notification (AWS SES)
# =============================================================================

# Enable sending temporary credentials via email when users are provisioned
CREDENTIAL_NOTIFICATION_ENABLED=false

# Verified SES sender address (must be verified in SES or in a non-sandbox domain)
SES_SENDER_EMAIL=noreply@example.com

# Platform branding for email templates
PLATFORM_NAME=License Portal
PLATFORM_LOGIN_URL=https://portal.example.com/login
PLATFORM_SUPPORT_EMAIL=support@example.com
